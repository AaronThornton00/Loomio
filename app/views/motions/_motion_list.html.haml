-m = motion
.motion.span11{:id =>"motion_#{m.id}", :class => "#{last_class} voted_#{current_user.motion_vote(m) ? current_user.motion_vote(m).position : "notyet"}"}
  .border
    .group.cf
      .row
        .span7.5
          =link_to "Group: #{m.group.name}", m.group, :class => 'stop_prop'
        #close-date.span3
          - if m.close_date
            - if m.voting?
              Closing on 
            - else
              Closed on 
            =m.close_date
          - else
            No close date specified
        %span.toggle_motion_expand +
    .row
      .span0.5
        -#=render partial: "motions/display_icon", locals: {:vote => current_user.motion_vote(m)}
      .span4.5
        - if m.user_has_voted?(current_user)
          .unbold_name
            =link_to m.name, m, :class => 'stop_prop'
        - else
          .bold_name
            =link_to m.name, m, :class => 'stop_prop'
      .span6
        .description
          =truncate(m.description, :length => 60)
  .expanded.togglable.span11{:id => "expand_#{m.id}"}
    .border
      .group
        =link_to "Group: #{m.group.name}", m.group
        %span.toggle_motion_expand &ndash;
      .name
        =link_to m.name, m
      .description
        =m.description
      .graph_tooltip{ :id => "tooltip_#{m.id}" }
      .row.span11
        .pie.span8{ :id => "vgraph_#{m.id}" }
        .motion_actions.span2
          .btn.primary.small=link_to 'Discuss', m.discussion_url, target: '_blank', class: 'stop_prop'
          .btn.small=link_to 'View', m
          -if m.user_has_voted?(current_user) && m.voting?
            .btn.small=link_to 'Change vote', new_motion_vote_path(m)
          -elsif m.voting?
            .btn.small=link_to 'Vote', new_motion_vote_path(m)
:coffeescript
  jQuery ->
    @pie_graph_view_#{m.id} = new Tautoko.Views.Utils.GraphView
      motion_id: #{m.id}
      el: 'vgraph_#{m.id}'
      id_string: 'vgraph_#{m.id}'
      legend: true
      data: #{m.votes_graph_ready.to_json.html_safe}
      type: 'pie'
      tooltip_selector: '#tooltip_#{m.id}'

